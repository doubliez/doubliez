<!doctype html>
<html lang="en">
  <head prefix="og: http://ogp.me/ns# profile: http://ogp.me/ns/profile#">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="author" content="Thibault Doubliez">
    <meta property="og:title" content="<%= title @conn %>">
    <meta property="og:site_name" content="Thibault Doubliez">
    <meta property="og:type" content="profile">
    <meta property="og:locale" content="en_US">
    <meta property="og:url" content="<%= url(@conn) <> @conn.request_path %>">
    <meta property="og:image" content="<%= static_url(@conn, "/images/profile.jpg") %>">
    <meta property="og:image:width" content="800">
    <meta property="og:image:height" content="800">
    <meta property="og:image:type" content="image/jpg">
    <meta property="profile:first_name" content="Thibault">
    <meta property="profile:last_name" content="Doubliez">
    <meta property="profile:gender" content="male">
    <meta property="profile:username" content="doubliez">

    <title><%= title @conn %></title>
    <%= if Mix.env == :prod do %>
      <link href="<%= static_path(@conn, "/css/styles.css") %>" rel="stylesheet">
    <% end %>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script src="https://use.fontawesome.com/99f467b159.js"></script>
  </head>

  <body>
    <main>
      <%= render @view_module, @view_template, assigns %>
    </main>

    <%= if Mix.env == :dev do %>
      <script src="http://localhost:4001/js/polyfills.js"></script>
      <script src="http://localhost:4001/js/common.js"></script>
      <script src="http://localhost:4001/js/app.js"></script>
      <script src="http://localhost:4001/js/webpack-dev-server.js"></script>
      <script src="http://localhost:4001/js/webpack-hot-reload.js"></script>
    <% else %>
      <script src="<%= static_path(@conn, "/js/polyfills.js") %>"></script>
      <script src="<%= static_path(@conn, "/js/common.js") %>"></script>
      <script src="<%= static_path(@conn, "/js/app.js") %>"></script>
    <% end %>
  </body>
</html>
