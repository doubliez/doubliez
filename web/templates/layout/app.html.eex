<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="author" content="Thibault Doubliez">

    <title><%= title @conn %></title>
    <%= if Mix.env == :prod do %>
      <link href="<%= static_path(@conn, "/css/styles.css") %>" rel="stylesheet">
    <% end %>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script src="https://use.fontawesome.com/99f467b159.js"></script>
  </head>

  <body>
    <main>
      <%= render @view_module, @view_template, assigns %>
    </main>

    <%= if Mix.env == :dev do %>
      <script src="http://localhost:4001/js/polyfills.js"></script>
      <script src="http://localhost:4001/js/common.js"></script>
      <script src="http://localhost:4001/js/app.js"></script>
      <script src="http://localhost:4001/js/webpack-dev-server.js"></script>
      <script src="http://localhost:4001/js/webpack-hot-reload.js"></script>
    <% else %>
      <script src="<%= static_path(@conn, "/js/polyfills.js") %>"></script>
      <script src="<%= static_path(@conn, "/js/common.js") %>"></script>
      <script src="<%= static_path(@conn, "/js/app.js") %>"></script>
    <% end %>
  </body>
</html>
